@page
@model CreatePageModel

@{
    ViewData["Title"] = "Add profile item";
}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-page="/User/Dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-page="/ProfileItems/Index">Profile item</a>
        </li>
        <li aria-current="page"
            class="breadcrumb-item active">
            Add new profile item
        </li>
    </ol>
}

<h2 class="text-muted">
    Add profile item
</h2>

<form enctype="multipart/form-data"
      method="post">
    <div class="mb-3">
        <label asp-for="ProfileItem.Name" class="form-label">Enter name</label>
        <input asp-for="ProfileItem.Name"
               class="form-control"
               required="required"
               type="text">
        <span asp-validation-for="ProfileItem.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProfileItem.Description" class="form-label">Enter description</label>
        <textarea class="form-control" asp-for="ProfileItem.Description" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="ProfileItem.ItemType" class="form-label">Choose item type</label>
        <select class="form-select" aria-label="Item type select" name="ddlItemTypes">
            @foreach (var profileItemType in Model.ItemTypes)
            {
                <option value="@profileItemType.ProfileItemTypeId">@profileItemType.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="ProfileItem.Line" class="form-label">Line to be entered in the script</label>
        <input asp-for="ProfileItem.Line"
               class="form-control"
               required="required"
               type="text">
    </div>
    <div class="mb-3">
        <label asp-for="ProfileItem.LineContent" class="form-label">Line to be entered in the script</label>
        <textarea class="form-control" asp-for="ProfileItem.LineContent" rows="6"></textarea>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary mr-3 mt-2 "
                type="submit">
            Save <i class="fas fa-save"></i>
        </button>
        <a asp-page="/ProfileItems/Index">Go to profile items list</a>
    </div>
</form>