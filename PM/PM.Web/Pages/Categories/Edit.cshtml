@page "{id}"
@model EditPageModel

@{
    var name = Model.CurrentCategory.Name;
    ViewData["Title"] = $"Edit category {name}";
}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-page="/User/AdminDashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-page="/Categories/Index">Categories</a>
        </li>
        <li aria-current="page"
            class="breadcrumb-item active">
            Category @Model.CurrentCategory.Name
        </li>
    </ol>
}

<form enctype="multipart/form-data"
      method="post">
    <div class="mb-3">
        <label asp-for="CurrentCategory.Name" class="form-label">Category name</label>
        <input asp-for="CurrentCategory.Name"
               class="form-control"
               required="required"
               type="text">
        <span asp-validation-for="CurrentCategory.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CurrentCategory.Description" class="form-label">Vnesi poštno številko</label>
        <input asp-for="CurrentCategory.Description"
               class="form-control"
               required="required"
               type="number">
        <span asp-validation-for="CurrentCategory.Description"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary mr-3 mt-2 "
                type="submit">
            Save <i class="fas fa-save"></i>
        </button>
        <a asp-page="/Categories/Index">Cancel and go back to categories list</a>
    </div>
</form>

